<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="info.nexrave.nexrave.fragments.EventUserFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/eventUser_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="#99000000"
                android:scaleType="fitXY" />


            <LinearLayout
                android:paddingTop="64dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <info.nexrave.nexrave.systemtools.RoundedNetworkImageView
                    android:id="@+id/eventUser_user_profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@mipmap/app_icon"
                    android:paddingBottom="10dp"
                    android:scaleType="centerCrop" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/eventUser_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Anonymous User"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_weight="0.01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/eventUser_facebook"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="center"
                        app:srcCompat="@drawable/facebook_logo_button" />

                    <ImageButton
                        android:id="@+id/eventUser_instagram"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="center"
                        app:srcCompat="@drawable/instagram_logo" />

                    <ImageButton
                        android:id="@+id/eventUser_twitter"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="center"
                        app:srcCompat="@drawable/twitter_logo_button" />

                    <ImageButton
                        android:id="@+id/eventUser_snapchat"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="center"
                        app:srcCompat="@drawable/snapchat_logo_button" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="3dp" />

            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
